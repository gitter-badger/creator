C['cc'] = 'cl /nologo'
C['cpp'] = 'cl /nologo'
C['compileonly'] = '/c'
C['wall'] = '/Wall'
C['g'] = '/Zi /g'

C['include'] = '$(addprefix /I,$(quote $0))'
C['define'] = '$(addprefix /D,$(quote $0))'

C['objout'] = '/Fo$(quote $0)'
C['binout'] = '/Fe$(quote $0)'

C['O0'] = ''
C['O1'] = '/O1'
C['O2'] = '/O2'
C['O3'] = '/O2'  # O3 not supported
C['Os'] = '/Os'
C['Ofast'] = '/Ot'
C['Og'] = '/Od'
